{
  "name": "{{project}}",
  "version": "0.1.0",
  "description": "{{desc}}",
  "main": "dist/{{bundleName}}.{{if useForNode}}cjs{{else}}umd{{/if}}.js",
  "module": "dist/{{bundleName}}.esm.js",
  "browser": "dist/{{bundleName}}.umd.js",
  "sideEffects": false,
  "types": "types/todo.d.ts",
  "typings": "types/todo.d.ts",
  "scripts": {
    "build": "rollup -c",
    "prebuild": "rimraf dist types",
    "build-dev": "rollup -c rollup.dev.js",{{if hasPock}}
    "start": "concurrently \"rollup -w -c rollup.dev.js\" \"pock\" \"opn http://127.0.0.1:8080\"",{{/if}}
    "lint": "eslint {{if hasTest}}{src,test}{{else}}src{{/if}}/**/*.{js,ts}",
    "format": "prettier --config .prettierrc.js --write {{if hasTest}}{src,test}/**/*.{js,ts}{{else}}src/**/*.{js,ts}{{/if}}",
    "inspect": "jsinspect src"{{if hasTest}},
    "test": "tsc --outDir test_cache && nyc ava -v",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "report": "nyc report --reporter=html"{{/if}},
    "prepare": "{{if !hasTravis&&hasTest}}npm test && {{/if}}npm run build"{{/if}}
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/{{author}}/{{project}}.git"
  },
  "keywords": [{{each keywords $kwd $idx}}
    "{{@$kwd}}"{{if $idx != keywords.length - 1}},{{/if}}{{/each}}
  ],
  "author": "{{author}}",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/{{author}}/{{project}}/issues"
  },
  "files": [
    "src",
    "man",
    "dist",
    "example",
    "types"
  ],
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint"
      ],
      "*.ts": [
        "eslint"
      ]
    },
    "ignore": ["**/*.d.ts"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build && npm run build-dev && git add ."{{if !hasTravis&&hasTest}},
      "pre-push": "npm test"{{/if}}
    }
  },{{if hasTest}}
  "ava": {
    "cache": true,
    "require": [
      "./test/_register",
      "@babel/polyfill"
    ]
  },
  "nyc": {
    "cache": true,
    "include": [
      "dist/**/*.js"
    ]
  },{{/if}}
  "homepage": "https://github.com/{{author}}/{{project}}#readme",
  "browserslist": [
    {{if compressTool === 'uglify'}}"> 1%",
    "last 2 versions",
    "not ie <= 9"{{/if}}{{if compressTool === 'minify'}}"last 2 iOS major versions"{{/if}}
  ],
  "devDependencies": {
    "@babel/core": "^7.4.0",{{if hasTest}}
    "@babel/polyfill": "^7.4.0",{{/if}}
    "@babel/preset-env": "^7.4.2",{{if hasTest}}
    "@babel/register": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^1.5.0",
    "@typescript-eslint/parser": "^1.5.0",
    "ava": "^1.4.1",{{/if}}
    "babel-plugin-array-includes": "^2.0.3",{{if hasTest}}
    "codecov": "^3.2.0",{{/if}}{{if hasPock}}
    "concurrently": "^4.1.0",{{/if}}
    "conventional-changelog-cli": "^2.0.12",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.15.3",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "jsinspect": "^0.12.7",
    "lint-staged": "^8.1.5",{{if hasTest}}
    "nyc": "^13.3.0",{{/if}}{{if hasPock}}
    "opn-cli": "^4.0.0",
    "pock": "^0.3.3",{{/if}}
    "prettier": "^1.16.4",{{if hasPuppeteer}}
    "puppeteer": "^1.14.0",{{/if}}
    "rimraf": "^2.6.3",
    "rollup": "^1.7.4",
    "rollup-plugin-babel": "^4.3.2",{{if compressTool === 'minify'}}
    "rollup-plugin-babel-minify": "^8.0.0",{{/if}}
    "rollup-plugin-replace": "^2.1.1",{{if compressTool === 'uglify'}},
    "rollup-plugin-uglify": "^6.0.2",{{/if}}
    "rollup-plugin-typescript2": "^0.20.1",
    "typescript": "^3.3.4000"
  },
  "dependencies": {
    "tslib": "^1.9.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
